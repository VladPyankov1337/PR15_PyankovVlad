<Page x:Class="Documents_Pyankov.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Documents_Pyankov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">
    <Grid>
        <Grid
            Height="50"
            VerticalAlignment="Top"
            Background="Gray">
            <Image
                Width="30"
                Height="30"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="10" Source="/image/icon.png"/>
            <Label
                Foreground="White"
                Content="Учёт входящих и исходящих документов"
                HorizontalContentAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"/>
            <Button
                Content="Выйти"
                Click="Exit"
                Width="75"
                Height="25"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="10"
                Background="White"/>
        </Grid>
        <ScrollViewer Margin="10,55,10,55">
            <StackPanel x:Name="Parent"/>
        </ScrollViewer>
        <Button
                Content="Добавить"
                Click="Add"
                Width="75"
                Height="25"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Margin="10"
                Background="White"/>
    </Grid>
</Page>
